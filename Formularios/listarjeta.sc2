	PROCEDURE Init
		thisform.limpiar()
		
	ENDPROC

	PROCEDURE limpiar
		select aux_facven
		=tablerevert(.t.)
		thisform.text1.value=0.00
		thisform.o.o1.value=1
		thisform.o2.o1.value=1
		thisform.o2.visible=.f.	
		thisform.labelnombre.caption=""
		thisform.codigo1.value=''
		thisform.codigo1.setfocus
	ENDPROC

	PROCEDURE CODIGO1.GotFocus
		thisform.label100.visible=.t.
		select aux_facven
		=tablerevert(.t.)
		
	ENDPROC

	PROCEDURE CODIGO1.KeyPress
		LPARAMETERS nKeyCode, nShiftAltCtrl
		if nkeycode=28
			do form busqueda with 'tarjetas','','codigo','nombre' to this.value
		endif
	ENDPROC

	PROCEDURE CODIGO1.LostFocus
		if val(this.value)#0 
			this.value=ceros(this.value,2)
			select tarjetas
			set order to codigo
			seek this.value
			if found()
				thisform.labelnombre.caption=tarjetas.nombre
				thisform.o2.visible=.f.	
			else
				thisform.o2.visible=.f.	
				thisform.labelnombre.caption=''
				messagebox('Codigo de Tarjeta Incorrecto.',48,'Control')	
				this.value=space(2)
			endif	
		else+
			if lastkey()=13
				messagebox('Todas las Tarjetas.',48,'Control')
				thisform.labelnombre.caption='Todas las Tarjetas'
				thisform.o2.visible=.t.
			endif	
		endif
		thisform.label100.visible=.f.
	ENDPROC

	PROCEDURE Command1.Click
		thisform.limpiar()
	ENDPROC

