	PROCEDURE Command5.Click
		store 0 to thisform.text1.value
		select aux_facven
		=tablerevert(.t.)
		select movtar
		set order to 0
		do case
			case thisform.o.o1.value=1
				set filter to 
			case thisform.o.o2.value=1	
				set filter to val(pagonumero)#0
			case thisform.o.o3.value=1		
				set filter to val(pagonumero)=0	
		endcase
		go top
		if val(thisform.codigo1.value)=0
			do while not eof()
				scatter memvar
				m.numero=m.numfac
				m.fecha=m.fecing
				m.total=m.importe
				m.tarjeta=m.nombre
				m.liquidado=m.pagonumero
				thisform.text1.value=thisform.text1.value+m.importe
				select aux_facven
				append blank
				gather memvar
				select movtar
				skip
			enddo
		else
			set order to codtar
			seek thisform.codigo1.value
			do while not eof() and codtar=thisform.codigo1.value
				scatter memvar
				m.numero=m.numfac
				m.fecha=m.fecing
				m.total=m.importe
				m.tarjeta=m.nombre
				m.liquidado=m.pagonumero
				thisform.text1.value=thisform.text1.value+m.importe		
				select aux_facven
				append blank
				gather memvar
				select movtar
				skip
			enddo	
		endif
		select aux_facven
		do case
			case thisform.o2.o1.value=1
				set order to fecha
			case thisform.o2.o2.value=1	
				set order to tarjeta
		endcase
		go top
		thisform.grid2.refresh
		select movtar 
		set filter to 		
	ENDPROC

