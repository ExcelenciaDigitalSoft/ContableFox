	PROCEDURE Grid1.Column2.Text1.LostFocus
		if val(this.value)#0
			select periodos
			f1=ctot("01/"+ceros(str(val(right(this.value,2)),2),2)+"/"+ceros(str(val(left(this.value,4)),4),4))
			f2=GoMonth(f1,12)-1
			repl desde with f1,hasta with f2
		EndIf	
		
	ENDPROC

	PROCEDURE Grid1.Column5.Check1.Click
