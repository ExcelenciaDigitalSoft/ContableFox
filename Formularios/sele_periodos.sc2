		Endscan
		go recor r
		repl actual with .t.
	ENDPROC

	PROCEDURE Xpbutton2.Click
		If messagebox('Confirma Periodo',36,'Asistente')=6
			select periodos
			if cerrado#"S"
				repl cerrado with "N"
			endif
			=TableUpdate(.t.)
			locate for actual=.t.
			if found()
				scatter memvar
				select periodo_actual
				*append blank
				gather memvar
				_periodosele=periodo
				_periododesde=desde
				_periodohasta=hasta
		
				if .f.
				_idsesion=Sys(2015)  && Variables Globales para Filtrar
				_idnumero=idnumero
				
				
				gather memvar
				Replace idsesion with _idsesion
				Set Filter To idsesion=_idsesion and idnumero=_idnumero
			endif
			if .t.
				Public periodo_actualsele	as form
				IF WEXIST("periodo_actualsele") 
					*= MESSAGEBOX("La tabla de Zonas se encuentra Activa",16,¨"TU PROGRAMA") 
					ACTIVATE WINDOW periodo_actualsele 
				Else
					DO form periodo_actualsele
				Endif 
				
				periodo_actualsele.refrescar()
				
				*--- Quito llamada a importar asientos----------------------------------
				*do form importar_asientos with 0 name importar_asientos
		
				endif
			Else
				messagebox("Debe Definir el periodo actual",48,"Control")	
			Endif
			inkey(1,"H")	
			thisform.release
		EndIf
		
