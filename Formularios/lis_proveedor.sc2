	PROCEDURE Init
		thisform.titulo=""
		thisform.text2.value={}
		thisform.text3.value=date()
		thisform.text2.setfocus
	ENDPROC

	PROCEDURE saldo_prov
		parameters _prov,_f1,_f2
		store 0 to d,h
		select faccom
		*If Val(thisform.Textcodigo.Value)=0
		*	Set Filter To 
		*Else
		*	Set Filter To cliente=thisform.Textcodigo.Value
		*Endif
		set order to ProFec
		set near on
		seek _prov+Dtos(_f1)
		set near off
		do while not eof() and proveedor=_prov and fecha <= _f2
			if proveedor=_prov and left(allt(faccom.numero),1)#'A'
				do case
					case left(allt(faccom.numero),1)='F' or left(allt(faccom.numero),1)='D'or left(allt(faccom.numero),1)='R'
						h=h+faccom.total
					case left(allt(faccom.numero),1)='C'
						d=d+faccom.total			 
				endcase
			endif
			select faccom
			skip
		EndDo
		******* Calculo pagos a Proveedores ******* 
		If Val(thisform.Textcodigo.Value)=0 && para Todo los clientes fiscales
			select orden
			set order to ProFec
			Set Near On
			seek _prov+Dtos(_f1)
			Set Near Off
			do while not eof() and proveedor=_prov and fecha <= _f2
				if proveedor=_prov 
					d=d+orden.importe
				endif
				select orden
				skip
			EndDo
		Else && para Un cliente fiscales
			select orden
			set order to ProFec
			Set Near On
			seek _prov+Dtos(_f1)
			Set Near Off
			do while not eof() and proveedor=_prov and fecha <= _f2
				if proveedor=_prov 
					Select pagosprov
					Set Order To Nroord
					Seek orden.nroord
					DO while not Eof() and nroord=orden.nroord
						If cliente=thisform.Textcodigo.Value
							d=d+pagosprov.importe
						EndIf	
						skip
					EndDo
				endif
				select orden
				skip
			EndDo	
		Endif	
		Select faccom
		Set Filter To 
		return h-d
	ENDPROC

