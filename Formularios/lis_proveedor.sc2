	PROCEDURE Xpbutton4.Click
		if messagebox('Desa Visualizar Listado',36,'Listado')=6
			select aux_faccom
			=tablerevert(.t.)
			******* FACTURAS PENDIENTES *******
			if thisform.o.o1.value=1 
				thisform.titulo="Facturas Pendientes"
				**** Filtro Clientes ****
				sele faccom
				If Val(thisform.Textcodigo.Value)=0
					Set Filter To 
				Else
					Set Filter To cliente=thisform.Textcodigo.Value 
				EndIf
				If Val(thisform.codigo1.value)#0 && Para cuando elijo un proveedor en particular *******
					Set Order To profec
					set near on
					seek thisform.codigo1.value+dtos(thisform.text2.value) 
					set near off
					do while not eof() and proveedor=thisform.codigo1.value and fecha<=thisform.text3.value 
						fac=faccom.numero
						if left(faccom.numero,2)#"AN"
							imp=faccom.ctacte
						Else
							imp=faccom.Total
						EndIf	
						sele pagosprov
						set order  to pronum 
						seek thisform.codigo1.value+fac
						pag=0
						do while !eof() and proveedor=thisform.codigo1.value and numero=fac &&no entra al dowhile
							f=VERFIELD("ORDEN",pagosprov.NroOrd,"FECHA","NROORD")
							if betw(f,thisform.text2.value,thisform.text3.value)
								pag=pag+importe
							endif
							select pagosprov	
							skip
						EndDo
						if pag#imp
							sele aux_faccom
							appe blan
							repl numero with fac,fecha with faccom.fecha
							if inlist(left(fac,1),"A","C")
								repl total with (imp)*-1,pagado with (pag)*-1,saldo with (imp-pag)*-1
							Else
								repl total with imp,pagado with pag,saldo with imp-pag
							EndIf	
						endif
						sele faccom
						Skip
					enddo
				Else && ******* Para todos los proveedores *******
					Select proveedores
					Go top
					Scan
						If sector="001"
							_prov=proveedores.codigo
							Select faccom
							Set Order To profec
							set near on
							seek _prov+dtos(thisform.text2.value) 
							set near off
							do while not eof() and proveedor=_prov and fecha<=thisform.text3.value 
								fac=faccom.numero
								if left(faccom.numero,2)#"AN"
									imp=faccom.ctacte
								Else
									imp=faccom.Total
								EndIf	
								sele pagosprov
								set order  to pronum 
								seek _prov+fac
								pag=0
								do while !eof() and proveedor=_prov and numero=fac &&
									f=VERFIELD("ORDEN",pagosprov.NroOrd,"FECHA","NROORD")
									If betw(f,thisform.text2.value,thisform.text3.value)
										pag=pag+importe
									Endif
									select pagosprov	
									skip
								EndDo
								if pag#imp
									sele aux_faccom
									appe blan
									repl numero with fac,fecha with faccom.fecha
									if inlist(left(fac,1),"A","C")
										repl total with (imp)*-1,pagado with (pag)*-1,saldo with (imp-pag)*-1
									Else
										repl total with imp,pagado with pag,saldo with imp-pag
									EndIf	
								endif
								sele faccom
								Skip
							enddo
						Endif	
						Select proveedores
					EndScan	
				Endif	
			Endif	
		
			
			
			******* FACTURAS PAGADAS *******
			
			
				
			if thisform.o.o2.value=1 
				thisform.titulo="Facturas Pagadas"	
				**** Filtro Clientes ****
				sele faccom
				If Val(thisform.Textcodigo.Value)=0 
					Set Filter To 
				Else
					Set Filter To cliente=thisform.Textcodigo.Value
				Endif	
				*************************	
				If Val(thisform.codigo1.value)#0 && Para cuando elijo un proveedor en particular *******
					set order to profec
					set near on
					seek thisform.codigo1.value+dtos(thisform.text2.value) 
					set near off
					do while not eof() and proveedor=thisform.codigo1.value and fecha<=thisform.text3.value
						fac=numero
						imp=total
						sele pagosprov
						set order  to pronum
						seek thisform.codigo1.value+fac
						pag=0
						do while not eof() and proveedor=thisform.codigo1.value and numero=fac
							pag=pag+importe
							skip
						enddo
						if pag=imp
							sele aux_faccom
							appe blan
							repl numero with fac,fecha with faccom.fecha
							repl total with imp,pagado with pag,saldo with imp-pag
						endif
						sele faccom
						skip
					EndDo
				Else && ******* Para todos los proveedores *******
					Select proveedores
					Go top
					Scan
						If sector="001"
							_prov=proveedores.codigo
							Select faccom
							set order to profec
							set near on
							seek _prov+dtos(thisform.text2.value) 
							set near off
							do while not eof() and proveedor=_prov and fecha<=thisform.text3.value
								fac=numero
								imp=total
								sele pagosprov
								set order  to pronum
								seek _prov+fac
								pag=0
								do while not eof() and proveedor=_prov and numero=fac
									pag=pag+importe
									skip
								enddo
								if pag=imp
									sele aux_faccom
									appe blan
									repl numero with fac,fecha with faccom.fecha
									repl total with imp,pagado with pag,saldo with imp-pag
								endif
								sele faccom
								skip
							EndDo			
						EndIf	
						Select proveedores
					EndScan
				Endif	
			EndIf	
			
			
			
			******* No Se Usa *******	
			
			
			
			if thisform.o.o3.value=1 
				thisform.titulo="Ordenes de Pago sin entregar"
				select orden
				set order to sinentrega
				go top
				scan
					select aux_faccom
					append blank
					repl fecha with orden.fecha
					repl numero with orden.nroord
					repl nomprov with orden.detalle
					repl total with orden.importe
					select orden
				endscan
				select aux_faccom
			endif	
			
			
			Select aux_faccom
			If Reccount()#0
				If thisform.o2.o1.Value=1
					report form lis_prov nocon prev
				Else
					excel("aux_faccom")			
				Endif	
			Else
				MessageBox("No hay registros disponibles",48,"Control")
			endif
		endif	
		Select proveedores
		Set Filter To 
		
		
	ENDPROC

