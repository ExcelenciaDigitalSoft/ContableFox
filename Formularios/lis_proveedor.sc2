	ENDPROC

	PROCEDURE CODIGO1.GotFocus
		thisform.label4.visible=.t.
		for K=1 to 6
			keyb '{SHIFT+RIGHTARROW}'
		endfor
		
	ENDPROC

	PROCEDURE CODIGO1.KeyPress
		LPARAMETERS nKeyCode, nShiftAltCtrl
		if betw(nkeycode,65,90) or betw(nkeycode,97,122)
			do form busqueda with 'Proveedores','','codigo','nombre',"sector","=","001","Codigo","Nombre" to this.value
		endif
	ENDPROC

	PROCEDURE CODIGO1.LostFocus
		thisform.label4.visible=.f.
		if val(this.value)#0
			this.value=ceros(this.value,6)
			select proveedores
			Set Filter To 
			set order to codigo
			seek thisform.codigo1.value
			if found()
				If proveedores.sector="001"	
					thisform.text4.value=nombre
				Else
					MessageBox("Este Codigo Pertenece a un Centro de Facturación",48,"Control")	
					this.Value=""
					node			
				Endif	
			else
				thisform.text4.value=""
				messagebox("Codigo de Proveedor Incorrecto",48,"Control")
				this.value=""
			endif	
		else
			if lastkey()=13 or lastkey()=9 or lastkey()=24
				thisform.text4.value=""	
			endif	
		endif
		
	ENDPROC

	PROCEDURE Command1.Click
		if messagebox('Desa Visualizar Listado',36,'Listado')=6
			select aux_faccom
			=tablerevert(.t.)
			select saldo_prov
			=tablerevert(.t.)
			STORE 0 TO Sal_Ini
			select proveedores
			go top
			scan
				CodProv=proveedores.codigo
				Sal_Ini=proveedores.sal_inicio
				sele faccom
				set order to profec
				set near on
				seek CodProv+dtos(thisform.text2.value) 
				set near off
				do while not eof() and proveedor=CodProv and fecha<=thisform.text3.value
					fac=numero
					if left(faccom.numero,2)#"AN"
						imp=faccom.ctacte
					Else
						imp=faccom.Total
					EndIf	
					sele pagosprov
					set order  to pronum
					seek CodProv+fac
					pag=0
					do while not eof() and proveedor=CodProv and numero=fac
						f=VERFIELD("ORDEN",pagosprov.NroOrd,"FECHA","NROORD")
						if betw(f,thisform.text2.value,thisform.text3.value)
							pag=pag+importe
						endif
						Select pagosprov	
						skip
					enddo
					if pag#imp
						*sele aux_faccom
						*appe blan
						*repl numero with fac,fecha with faccom.fecha
						*if inlist(left(fac,1),"A","C")
						*	repl total with (imp)*-1,pagado with (pag)*-1,saldo with (imp-pag)*-1
						*Else
						*	repl total with imp,pagado with pag,saldo with imp-pag
						*EndIf	
						select saldo_prov
						set orde to codigo
						seek CodProv
						if !found()
							append blank
							REPLACE total WITH Sal_Ini
						endif
						repl codigo with CodProv
						repl nombre with proveedores.nombre
						if inlist(left(fac,1),"A","C")
							repl total with (total+((imp)*-1))- pag
						Else
							repl total with (total+(imp))- pag
						EndIf	
					endif
					sele faccom
					skip
				Enddo
				select proveedores
			endscan	
			select saldo_prov
			report form saldo_prov nocon prev
		endif	
		
		
	ENDPROC

